<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#AC1BA5"
                android:text="11 November 2023"
                android:textStyle="bold"
                android:id="@+id/date_txt_income"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#201A20"
                android:text="Type text"
                android:maxLines="1"
                android:textStyle="bold"
                android:id="@+id/type_txt_income"/>


            <TextView
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#0E0D0E"
                android:text="Note"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_below="@+id/type_txt_income"
                android:id="@+id/note_txt_income"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:textColor="#AC1BA5"
                android:text="600000"
                android:textStyle="bold"
                android:id="@+id/ammount_txt_income"/>


        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>